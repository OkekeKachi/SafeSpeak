<%- include("partials/navbar") %>
    <br><br>
    <div class="container">
        <% if (Array.isArray(reports) && reports.length===0){%>
            <h3 class="section-title center-align">You Haven't Reported any incident</h3><br>
            <% }else{%>
                <h3 class="section-title center-align">Your Reports</h3><br>
                <% } %>

                    <div class="row">
                        <% reports.forEach((report)=> { %>
                            <div class="col s12 m6 l4">
                                <div class="card" style="height: 300px;"> <!-- Fixed height -->
                                    <div class="card-content">
                                        <span class="card-title">
                                            <%= report.title %>
                                        </span><br>
                                        <p><strong class="bold-title">Incident Type:</strong>
                                            <%= report.incidentType%>
                                        </p>
                                        <p><strong class="bold-title">Location:</strong>
                                            <%= report.location %>
                                        </p>
                                        <p><strong class="bold-title">Status:</strong> <span
                                                class="chip <% if(report.isPending){ %> green <%}else{%> yellow <% } %> lighten-3">
                                                <% if(report.isPending){ %>
                                                    Approved
                                                    <%}else{%>
                                                        Pending
                                                        <%}%>
                                            </span></p>
                                        <p><strong class="bold-title">Date:</strong>
                                            <%= report.dateOfIncident %>
                                        </p>

                                        <p><strong class="bold-title">Description:</strong>
                                            <%= report.description %>
                                        </p>
                                    </div>

                                </div>
                            </div>
                            <% }); %>
                    </div>
    </div>
    <%- include('partials/footer') %>